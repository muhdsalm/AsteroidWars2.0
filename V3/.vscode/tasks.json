{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug",
            "type": "shell",
            "command": "dotnet run -R ubuntu.20.04-x64",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "dotnet build",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "publish",
            "type": "shell",
            "command": "dotnet publish V3.csproj -self-contained -p:PublishSingleFile=True -p:PublishTrimmed=True -p:TrimMode=CopyUsed -p:PublishReadyToRun=False -R:ubuntu.20.04-x64",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "publish_win",
            "type": "shell",
            "command": "dotnet publish V3.csproj --self-contained -p:PublishSingleFile=True -p:PublishReadyToRun=False -r win-x64 -c Release",
            "problemMatcher": [],
            "group": "build"
        }
    ]
}